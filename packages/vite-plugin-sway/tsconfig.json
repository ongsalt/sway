{
    "compilerOptions": {
      "target": "ES2022",
      "useDefineForClassFields": true,
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "lib": ["ES2022", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "declaration": true,
    
      /* Linting */
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedSideEffectImports": true,
      "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
    
  }
  